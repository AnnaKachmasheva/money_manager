<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/text_margin_16">

    <TextView
        android:id="@+id/enterBalanceHeader"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center|top"
        android:layout_marginLeft="@dimen/text_margin_40"
        android:layout_marginRight="@dimen/text_margin_40"
        android:layout_marginTop="@dimen/text_margin_40"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:text="@string/add_balance_on_the_main_account"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/enterBalanceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/enterBalanceHeader"
        android:layout_centerInParent="true"
        android:layout_gravity="center|top"
        android:layout_marginLeft="@dimen/text_margin_40"
        android:layout_marginTop="110dp"
        android:layout_marginRight="@dimen/text_margin_40"
        android:text="@string/add_balance_on_the_main_description"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="18dp"
        tools:ignore="SpUsage" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addBalanceTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_40"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterBalanceDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addBalanceTextFiled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/defaultCurrency"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/text_margin_40"
        android:layout_marginTop="185dp"
        android:layout_gravity="right"
        android:text="CZK"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addBalanceTextInputLayout" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/text_margin_16"
        android:paddingStart="36dp"
        android:paddingTop="14dp"
        android:paddingEnd="36dp"
        android:paddingBottom="14dp"
        android:text="@string/back"
        android:textSize="18sp"
        app:iconGravity="textStart"
        app:icon="@drawable/baseline_arrow_back_24"
        tools:ignore="RtlHardcoded" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/text_margin_16"
        android:paddingStart="36dp"
        android:paddingTop="14dp"
        android:paddingEnd="36dp"
        android:paddingBottom="14dp"
        app:icon="@drawable/baseline_arrow_forward_24"
        app:iconGravity="textEnd"
        android:text="@string/next"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>