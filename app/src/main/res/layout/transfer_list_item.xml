<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin_16"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="2"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iconTransferItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:contentDescription="@string/icon"
            android:gravity="center"
            android:paddingTop="20dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/fromAccountNameTransferItem"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="10"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/toAccountTransferItem"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="10"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/amountTransferItem"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="5"
            android:textAlignment="textEnd"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/dateTransferItem"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:layout_columnWeight="5"
            android:textAppearance="?attr/textAppearanceListItem" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>